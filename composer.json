{
    "name": "onix-systems-php/hyperf-core",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Library of kernel for hyperf",
    "autoload": {
        "psr-4": {
            "Hyperf\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "fakerphp/faker": "^1.0",
        "hyperf/command": "^2.2|^3.0",
        "hyperf/contract": "^2.2|^3.0",
        "hyperf/database": "^2.2|^3.0",
        "hyperf/db-connection": "^2.2|^3.0",
        "hyperf/di": "^2.2|^3.0",
        "hyperf/framework": "^2.2|^3.0",
        "hyperf/http-server": "^2.2|^3.0",
        "hyperf/resource": "^2.2|^3.0",
        "hyperf/testing": "^2.2|^3.0",
        "hyperf/validation": "^2.2|^3.0",
        "hyperf/utils": "^2.2|^3.0",
        "yzen.dev/plain-to-class": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\Core\\ConfigProvider"
        }
    }
}
